@page
@model RazorPagesTutorial.OrderEditModel
@{
    ViewData["Title"] = "OrderEdit";
}

<h1>OrderEdit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>@Model.Order.O_ID</h2>
            <input type="hidden" asp-for="Order.O_ID" />

            <div class="form-group">
                <label asp-for="Order.O_Status" class="control-label"></label>
                <input asp-for="Order.O_Status" class="form-control" />
                <span asp-validation-for="Order.O_Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Orders/OrderTable" asp-route-ID="@Model.Order.O_ID"
           class="btn btn-primary m-1">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

