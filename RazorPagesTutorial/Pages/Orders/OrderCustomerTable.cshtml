@page
@model RazorPagesTutorial.OrderCustomerTableModel
@{
    ViewData["Title"] = "OrderCustomerTable";
}

<h1>Your Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].O_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].O_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].O_PIDS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].O_Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.O_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O_PIDS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O_Status)
            </td>
            <td>
                <div id="Cancel">
                    <a class="btn btn-large btn-danger" asp-page="/Orders/OrderDelete" asp-route-ID="@item.O_ID">Cancel</a>
                </div>
            </td>
            
        </tr>
        }
    </tbody>
</table>


